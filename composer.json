{
    "name": "bit4bit/phrelatorio",
    "description": "generate reports using opendocument editor (like libreoffice/abiwork/gnumeric)",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Phrelatorio\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Jovany Leandro G.C",
            "email": "bit4bit@riseup.net"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4 || ^8",
        "josemmo/uxml": "dev-main",
        "phptal/phptal": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "ramsey/composer-repl": "1.x-dev"
    },
    "scripts": {
        "commit": [
            "phpunit",
            "psalm"
        ]
    },
    "config": {
        "allow-plugins": {
            "ramsey/composer-repl": true
        }
    }
}
